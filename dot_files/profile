#
# a simple .profile file
#

current_perl_version () {
    version=`perl -e 'print $^V'`
    path=`which perl`
    abbr='?'
    
    case $path in
        (/usr/bin/*)
            abbr='sys'
            ;;
        
        (/usr/local/bin/*)
            abbr='local'
            ;;
        
        (/opt/local/bin/*)
            abbr='port'
            ;;
        
        (*/perlbrew/*)
            abbr='brew'
            ;;
    esac
    
    echo "$abbr ${version/v/}"
}

p () {
    perl=''
    for i in `perlbrew list| grep perl- | cut -b 3-`; do
        case $i in (perl-$1*) perl=$i ;; esac
    done
    
    perlbrew use $perl
}

# Setting the path for MacPorts.
export PATH="$PATH:/opt/local/bin:/opt/local/sbin:~/bin"
export PS1='[`current_perl_version`] \h:\W \u\$ '

#
# Aliases
#
alias ls='ls -F'
alias ll='ls -lF'
alias la='ls -alF'

alias minicpanm='cpanm --mirror ~/minicpan --mirror-only'

# ensure we get our executables even if otheres have precedence
alias cpanm=~/bin/cpanm
alias perlbrew=~/bin/perlbrew

#
# Project Settings
#
export CATALYST_CONFIG_LOCAL_SUFFIX=wolfgang

#
# initiate perlbrew
#
. ~/perl5/perlbrew/etc/bashrc
